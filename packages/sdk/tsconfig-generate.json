{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],

        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,

        "forceConsistentCasingInFileNames": true,

        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
     "include": ["src/**/*.js", "test/**/*.js", "vectors/**/*.js"]
}
